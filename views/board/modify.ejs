<%- include("../include/header") -%>

<div class="container mt-3">

    <div style="display: flex; justify-content: space-between; align-items: center;">
        <div>
            <a href="/schedule" class="btn btn-primary" target="_blank">달력(탭)</a>
            <a href="#" class="btn btn-secondary" onclick="openWindow('/schedule')">달력(새창)</a>
            <a href="/chat" class="btn btn-primary" target="_blank">채팅</a>
            <a href="#" class="btn btn-secondary" onclick="openWindow('/chat')">채팅(새창)</a>
        </div>
        <div class="user-info">
            <p>사용자 : <%=username%> </p>
        </div>
    </div>

    <h3 class="mb-3 mt-3">게시글 수정</h3>
    <form action="/board/modify/<%=result.id%>/ok" method="post">
        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-lable">작성자</label>
                    <input type="text" class="form-control" placeholder="작성자를 입력하시오" name="writer" value="<%=result.writer%>" readonly>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-lable">제목</label>
            <input type="text" class="form-control" placeholder="제목을 입력하시오" name="title" value="<%=result.title%>"> 
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-lable">내용</label>
            <textarea class="form-control" rows="5" placeholder="내용을 입력하시오" name="content"><%=result.content%></textarea>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <input type="submit" class="btn btn-primary" value="수정하기">
            <a href="/board/view/<%=result.id%>" class="btn btn-primary">돌아가기</a>
        </div>
    </form> 
</div>

<%- include("../include/footer") -%>
