<%- include("../include/header") -%>

<div class="container">
    <h3 class="mb-3"><%=head%></h3>
    <form action="/board/modify/<%=id%>/ok" method="post">
        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-lable">작성자</label>
                    <input type="text" class="form-control" placeholder="작성자를 입력하시오" name="writer" value="<%=writer%>">
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-lable">비밀번호</label>
                    <input type="password" class="form-control" placeholder="비밀번호를 입력하시오" name="password">
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-lable">제목</label>
            <input type="text" class="form-control" placeholder="제목을 입력하시오" name="title" value="<%=title%>"> 
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-lable">내용</label>
            <textarea class="form-control" rows="5" placeholder="내용을 입력하시오" name="content"><%=content%></textarea>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <input type="submit" class="btn btn-primary" value="작성하기">
            <a href="/board/view/<%=id%>" class="btn btn-primary">돌아가기</a>
        </div>
    </form> 
</div>

<%- include("../include/footer") -%>
